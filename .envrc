export GO_TESTENV=CASTELLUM_AUDIT_SILENT=true

if type -P lorri &>/dev/null; then
  eval "$(lorri direnv)"
elif type -P nix &>/dev/null; then
  use nix
else
  echo "Found no nix binary. Skipping activating nix-shell..."
fi
